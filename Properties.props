<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ImportGroup Label="PropertySheets" />
  <PropertyGroup Label="UserMacros">
    <BuildDir>$(ProjectDir)\Build\</BuildDir>
    <SourcesDir>$(ProjectDir)\Sources\</SourcesDir>
    <HeadersDir>$(ProjectDir)\Headers\</HeadersDir>
    <ResourcesDir>$(ProjectDir)\Resources\</ResourcesDir>
  </PropertyGroup>
  <PropertyGroup />
  <ItemDefinitionGroup>
    <ClCompile>
      <PreprocessorDefinitions>_UNICODE;UNICODE;SOLUTIONNAME="$(SolutionName)";%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
  <ItemGroup>
    <BuildMacro Include="BuildDir">
      <Value>$(BuildDir)</Value>
    </BuildMacro>
    <BuildMacro Include="SourcesDir">
      <Value>$(SourcesDir)</Value>
    </BuildMacro>
    <BuildMacro Include="HeadersDir">
      <Value>$(HeadersDir)</Value>
    </BuildMacro>
    <BuildMacro Include="ResourcesDir">
      <Value>$(ResourcesDir)</Value>
    </BuildMacro>
  </ItemGroup>
</Project>